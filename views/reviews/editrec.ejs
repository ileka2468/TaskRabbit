<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
    <title>Edit Review</title>
</head>
<body>
<%- include('../partials/header') %>

<main>
    <h1>Edit Review</h1>
    <form action="/reviews/save" method="post">
        <input type="hidden" name="review_id" value="<%= onerec.review_id %>" >
        <table>
            <tr>
                <td>User ID:</td>
                <td>
                    <select required name="user_id">
                        <% userRecs.forEach((rec, index) =>{ %>
                            <% if (onerec.user_id === rec.user_id) {%>
                                <option selected value="<%= rec.user_id %>"> <%= ` ID: ${rec.user_id} - ${rec.firstname} - ${rec.type}` %> </option>
                            <% } else {%>
                                <option value="<%= rec.user_id %>"> <%= ` ID: ${rec.user_id} - ${rec.firstname} - ${rec.type}` %> </option>
                            <% }%>
                        <% });%>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Service ID:</td>
                <td>
                    <select required name="service_id">
                        <% serviceRecs.forEach((rec, index) =>{ %>
                            <% if (onerec.service_id === rec.service_id) {%>
                                <option selected value="<%= rec.service_id %>"> <%= ` ID: ${rec.service_id} - ${rec.title}` %> </option>
                            <% } else {%>
                                <option value="<%= rec.service_id %>"> <%= ` ID: ${rec.service_id} - ${rec.title}` %> </option>
                            <% }%>
                        <% });%>
                    </select>
                </td>
            </tr>
            <tr>
                <td> Review Date: </td>
                <td> <input type="date" name="reviewdate" value="<%= onerec.reviewdate.toISOString().split('T')[0] %>" required> </td>
            </tr>
            <tr>
                <td> Rating: </td>

                <td>
                    <% if (onerec.rating == 1) { %>
                        <input type="radio" name="rating" value="1" checked="true">★ <br/>
                    <% } else { %>
                        <input type="radio" name="rating" value="1">★ <br/>
                    <% }%>
                    <% if (onerec.rating == 2) { %>
                        <input type="radio" name="rating" value="2" checked="true">★★<br/>
                    <% } else { %>
                        <input type="radio" name="rating" value="2">★★<br/>
                    <% }%>
                    <% if (onerec.rating == 3) { %>
                        <input type="radio" name="rating" value="3" checked="true">★★★<br/>
                    <% } else { %>
                        <input type="radio" name="rating" value="3">★★★<br/>
                    <% }%>
                    <% if (onerec.rating == 4) { %>
                        <input type="radio" name="rating" value="4" checked="true">★★★★<br/>
                    <% } else { %>
                        <input type="radio" name="rating" value="4">★★★★<br/>
                    <% }%>
                    <% if (onerec.rating == 5) { %>
                        <input type="radio" name="rating" value="5" checked="true">★★★★★<br/>
                    <% } else { %>
                        <input type="radio" name="rating" value="5">★★★★★<br/>
                    <% }%>

                </td>
            </tr>
            <tr>
                <td> Status: </td>
                <td>
                    <select name="status" >
                        <% if (onerec.status === 1) { %>
                            <option selected value="1">Live</option>
                            <option value="0">Pending</option>
                        <% } else {%>
                                <option value="1">Live</option>
                                <option selected value="0">Pending</option>
                        <% }%>
                    </select>
                </td>
            </tr>
        </table>
        <button type="submit">Save</button>
    </form>
</main>
<%- include('../partials/footer') %>
</body>
</html>
