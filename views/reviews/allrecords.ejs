<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
    <title>Document</title>
</head>
<body>
<%- include('../partials/header') %>

<main>
    <% if (allrecs.length > 0) {%>
        <table border="1">
            <tr>
                <th>Review ID</th>
                <th>User ID</th>
                <th>Service ID</th>
                <th>Review Date</th>
                <th>Rating</th>
                <th>Status</th>
            </tr>
            <% allrecs.forEach((recref, index) => { %>
                <tr>
                    <td><%= recref.review_id %></td>
                    <td><%= recref.user_id %></td>
                    <td><%= recref.service_id %></td>
                    <td><%= recref.reviewdate %></td>
                    <td><%= recref.rating %></td>
                    <td><%= recref.status %></td>
                    <td><a href='/reviews/<%= recref.review_id %>/show'>
                            Details</a></td>
                    <td><a href='/reviews/<%= recref.review_id %>/edit'>
                            Edit</a></td>
                    <td><a href='/reviews/<%= recref.review_id %>/delete'
                           onclick="return confirm('Are you sure you want to delete this review?');">Delete</a></td>
                </tr>
            <% }); %>
        </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
    <p> <a href='/reviews/addrecord'>Add New</a> </p>
</main>

<%- include('../partials/footer') %>
</body>
</html>
